<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    android:elevation="@dimen/card_view_resting_elevation"
    android:translationZ="@dimen/card_view_response_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--suppress AndroidLintContentDescription -->
        <com.example.xyzreader.ui.DynamicHeightNetworkImageView
            android:id="@+id/thumbnail"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/photo_placeholder" />

        <TextView
            android:id="@+id/article_title"
            style="@style/TextStyle.CardView.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/card_view_text_padding_top"
            android:paddingLeft="@dimen/card_view_text_padding_left_right"
            android:paddingRight="@dimen/card_view_text_padding_left_right" />

        <TextView
            android:id="@+id/article_subtitle"
            style="@style/TextStyle.CardView.Subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/card_view_text_padding_left_right"
            android:paddingRight="@dimen/card_view_text_padding_left_right"
            android:paddingBottom="@dimen/card_view_text_padding_bottom" />
    </LinearLayout>

</android.support.v7.widget.CardView>
