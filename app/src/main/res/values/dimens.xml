    <dimen name="status_bar_height">24dp</dimen>
    <item name="match_parent" type="dimen">-1</item>
    <item name="wrap_content" type="dimen">-2</item>

    <dimen name="app_bar_height_minimum">56dp</dimen>
    <!--The expanded height of the app bar is simply 3x the minimum height value.
        In a way, I am using the app bar height as an incremental size via:
        https://material.io/guidelines/layout/metrics-keylines.html#metrics-keylines-sizing-by-increments
        However, I am not applying this to all of my UI elements, only to the app bar.-->
    <dimen name="app_bar_height_expanded">168dp</dimen>
    <dimen name="logo_width">@dimen/wrap_content</dimen>
    <dimen name="logo_height">@dimen/wrap_content</dimen>
    <dimen name="app_bar_logo_bottom_margin">20dp</dimen>
    <dimen name="toolbar_height">@dimen/app_bar_height_minimum</dimen>
    <dimen name="baseline_grid">8dp</dimen>

